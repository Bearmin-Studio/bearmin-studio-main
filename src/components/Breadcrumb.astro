---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
const siteUrl = Astro.site ? Astro.site.toString().replace(/\/$/, '') : "https://bearmin.jp";

const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "ホーム",
      "item": `${siteUrl}/`
    },
    ...items.map((item, index) => ({
      "@type": "ListItem",
      "position": index + 2,
      "name": item.label,
      ...(item.href ? { "item": `${siteUrl}${item.href}` } : {})
    }))
  ]
});
---

<nav class="breadcrumb" aria-label="パンくずリスト">
  <ol>
    <li><a href="/">ホーム</a></li>
    {items.map((item, index) => (
      <li>
        {item.href && index < items.length - 1 ? (
          <a href={item.href}>{item.label}</a>
        ) : (
          <span aria-current="page">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
<script is:inline type="application/ld+json" set:html={breadcrumbSchema} />

<style>
  .breadcrumb {
    max-width: 900px;
    margin: 0 auto;
    padding: 7rem 2rem 1rem;
  }

  .breadcrumb ol {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.8125rem;
  }

  .breadcrumb li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb li:not(:last-child)::after {
    content: '›';
    color: var(--bear-brown);
    opacity: 0.4;
  }

  .breadcrumb a {
    color: var(--bear-brown);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .breadcrumb a:hover {
    opacity: 1;
  }

  .breadcrumb span {
    color: var(--charcoal);
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .breadcrumb {
      padding: 5rem 1.5rem 0;
    }
  }
</style>
