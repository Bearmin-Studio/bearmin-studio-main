    <div class="service-wrap">
      <div class="service-heading-row">
        <p class="sec-label"><span class="sec-num">02</span><span class="sec-name">Service</span></p>
        <h2 class="service-heading">サービス</h2>
      </div>
      <div class="service-cards">
        <a href="/service" class="sc sc--web">
          <div class="sc-top">
            <svg class="sc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
