    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 1.5rem;
  }

  .sec-num {
    font-family: var(--font-accent);
    font-size: 0.6875rem;
    color: var(--moss-green);
    letter-spacing: 0.1em;
  }

  .sec-name {
    font-family: var(--font-accent);
    font-size: 0.6875rem;
    color: var(--moss-green);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    opacity: 0.7;
  }

  .sec-label::before {
    content: '';
    display: block;
    width: 1.5rem;
    height: 1px;
    background: var(--moss-green);
    opacity: 0.5;
  }

  .text-link {
    font-size: 0.8125rem;
    color: var(--bear-brown);
    text-decoration: none;
    border-bottom: 1px solid rgba(107, 78, 61, 0.3);
    padding-bottom: 0.125rem;
    letter-spacing: 0.02em;
    transition: opacity 0.2s ease;
  }

  .text-link:hover {
    opacity: 0.6;
  }

  /* ========================================================
     Hero
  ======================================================== */
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 6rem 2rem 8rem;
    position: relative;
    background: #8a9a7a;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 30%;
    background: linear-gradient(to bottom, transparent, var(--warm-greige));
    pointer-events: none;
    z-index: 1;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.28);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-icon {
    width: 68px;
    height: 68px;
    margin-bottom: 2.5rem;
    filter: brightness(0) invert(1);
    opacity: 0;
    animation: fadeUp 1s ease forwards 0.3s;
  }

  .hero h1 {
    font-family: var(--font-accent);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 500;
    color: var(--soft-white);
    text-shadow: 0 2px 16px rgba(0, 0, 0, 0.18);
    margin-bottom: 1.25rem;
    line-height: 1.5;
    opacity: 0;
    animation: fadeUp 1s ease forwards 0.55s;
  }

  .hero-sub {
    font-size: 0.9375rem;
    color: rgba(250, 250, 250, 0.85);
    opacity: 0;
    animation: fadeUp 1s ease forwards 0.8s;
    margin-bottom: 2.75rem;
  }

  .hero-cta {
    display: inline-block;
    background: rgba(255, 255, 255, 0.14);
    color: var(--soft-white);
    border: 1.5px solid rgba(255, 255, 255, 0.55);
    padding: 0.875rem 2.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9375rem;
    letter-spacing: 0.05em;
    backdrop-filter: blur(6px);
    transition: background 0.3s ease, border-color 0.3s ease;
    opacity: 0;
    animation: fadeUp 1s ease forwards 1.05s;
  }

  .hero-cta:hover {
    background: rgba(255, 255, 255, 0.26);
    border-color: rgba(255, 255, 255, 0.85);
  }

  .hero-scroll {
    position: absolute;
    bottom: 2.75rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: fadeUp 1s ease forwards 1.4s;
  }

  .hero-scroll-label {
    font-family: var(--font-accent);
    font-size: 0.5625rem;
    letter-spacing: 0.25em;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
  }

  .hero-scroll-line {
    width: 1px;
    height: 36px;
    background: rgba(255, 255, 255, 0.35);
    animation: scrollLine 2s ease-in-out infinite;
  }

  @keyframes scrollLine {
    0%   { transform: scaleY(0); transform-origin: top; opacity: 1; }
    50%  { transform: scaleY(1); transform-origin: top; }
    51%  { transform: scaleY(1); transform-origin: bottom; }
    100% { transform: scaleY(0); transform-origin: bottom; opacity: 0.3; }
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(18px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  /* ========================================================
     Marquee
  ======================================================== */
  .marquee-strip {
    overflow: hidden;
    background: var(--bear-brown);
    padding: 0.875rem 0;
  }

  .marquee-inner {
    display: flex;
    align-items: center;
    gap: 2rem;
    width: max-content;
    animation: marquee 24s linear infinite;
  }

  @keyframes marquee {
    from { transform: translateX(0); }
    to   { transform: translateX(-50%); }
  }

  .marquee-item {
    font-family: var(--font-accent);
    font-size: 0.75rem;
    color: rgba(250, 250, 250, 0.75);
    white-space: nowrap;
    letter-spacing: 0.08em;
  }

  .marquee-sep {
    color: rgba(250, 250, 250, 0.25);
    font-size: 0.625rem;
    flex-shrink: 0;
  }

  /* ========================================================
     01 — About
  ======================================================== */
  .about-section {
    background: var(--soft-white);
    padding: 7rem 2rem;
  }

  .about-wrap {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: start;
  }

  .about-heading {
    font-family: var(--font-accent);
    font-size: clamp(2rem, 4.5vw, 3rem);
    font-weight: 500;
    color: var(--bear-brown);
    line-height: 1.3;
    margin-bottom: 1.75rem;
  }

  .about-body {
    font-size: 0.9375rem;
    line-height: 2.3;
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .about-right {
    padding-top: 3.5rem;
    display: flex;
    flex-direction: column;
    gap: 0;
    border-top: 1px solid rgba(107, 78, 61, 0.12);
  }

  .value-item {
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(107, 78, 61, 0.1);
  }

  .value-num {
    font-family: var(--font-accent);
    font-size: 1rem;
    color: var(--moss-green);
    opacity: 0.5;
    margin-top: 0.125rem;
    flex-shrink: 0;
  }

  .value-body h3 {
    font-family: var(--font-accent);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--bear-brown);
    margin-bottom: 0.375rem;
  }

  .value-body p {
    font-size: 0.875rem;
    line-height: 1.9;
    opacity: 0.75;
  }

  /* ========================================================
     02 — Service
  ======================================================== */
  .service-section {
    background: var(--warm-greige);
    padding: 7rem 2rem;
  }

  .service-wrap {
    max-width: 1000px;
    margin: 0 auto;
  }

  .service-heading-row {
    margin-bottom: 2.5rem;
  }

  .service-heading {
    font-family: var(--font-accent);
    font-size: clamp(1.5rem, 3.5vw, 2rem);
    font-weight: 500;
    color: var(--bear-brown);
  }

  .service-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .sc {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 3rem 3rem 2.5rem;
    text-decoration: none;
    min-height: 440px;
    transition: opacity 0.25s ease;
    position: relative;
  }

  .sc:hover {
    opacity: 0.86;
  }

  /* 両カード soft-white で統一、上部ラインで差別化 */
  .sc--web,
  .sc--game {
    background: var(--soft-white);
  }

  .sc--web  { border-top: 3px solid var(--moss-green); }
  .sc--game { border-top: 3px solid var(--bear-brown); }

  .sc-top {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  .sc-icon {
    width: 2.75rem;
    height: 2.75rem;
    flex-shrink: 0;
  }

  .sc--web  .sc-icon { color: var(--moss-green); }
  .sc--game .sc-icon { color: var(--bear-brown); opacity: 0.65; }

  .sc-badge {
    font-family: var(--font-accent);
    font-size: 0.5625rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--bear-brown);
    border: 1px solid rgba(107, 78, 61, 0.4);
    padding: 0.2rem 0.625rem;
    border-radius: 100px;
  }

  .sc-body {
    margin-top: 3rem;
  }

  .sc-title {
    font-family: var(--font-accent);
    font-size: clamp(1.875rem, 4vw, 2.75rem);
    font-weight: 500;
    line-height: 1.2;
    margin-bottom: 1.25rem;
    color: var(--bear-brown);
  }

  .sc-desc {
    font-size: 0.875rem;
    line-height: 2;
    color: var(--charcoal);
    opacity: 0.7;
  }

  .sc-cta {
    display: inline-block;
    margin-top: 2.25rem;
    font-size: 0.8125rem;
    letter-spacing: 0.04em;
    padding-bottom: 0.125rem;
    color: var(--bear-brown);
    border-bottom: 1px solid rgba(107, 78, 61, 0.3);
  }

