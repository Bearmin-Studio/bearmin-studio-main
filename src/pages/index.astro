    padding: 6rem 2rem;
    background: var(--soft-white);
  }

  .news-list {
    max-width: 640px;
    margin: 0 auto;
  }

  .news-item {
    display: flex;
    gap: 1.5rem;
    padding: 1.25rem 0;
    border-bottom: 1px solid rgba(107, 78, 61, 0.12);
    align-items: baseline;
    text-decoration: none;
    color: var(--charcoal);
    transition: opacity 0.2s ease;
  }

  .news-item:hover {
    opacity: 0.7;
  }

  .news-item:first-child {
    padding-top: 0;
  }

  .news-item:last-child {
    border-bottom: none;
  }

  .news-date {
    font-size: 0.8125rem;
    color: var(--bear-brown);
    white-space: nowrap;
    min-width: 5.5rem;
  }

  .news-title {
    font-size: 0.9375rem;
    color: var(--charcoal);
    transition: color 0.3s ease;
  }

  .news-item:hover .news-title {
    color: var(--moss-green);
  }

  .news-tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .news-tag {
    font-size: 0.75rem;
    color: var(--moss-green);
    background: rgba(90, 111, 88, 0.1);
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    white-space: nowrap;
  }

  .news-more {
    text-align: center;
    margin-top: 2.5rem;
  }

  /* Contact Preview */
  .contact-preview {
    padding: 6rem 2rem;
    background: var(--soft-white);
    border-top: #8a9a7a24 3px solid;
    text-align: center;
  }

  .contact-text {
    max-width: 480px;
    margin: 0 auto 2.5rem;
  }

  .contact-text p {
    font-size: 0.9375rem;
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .service-cards {
      grid-template-columns: 1fr;
    }

    .works-grid {
      grid-template-columns: 1fr;
    }

    .about-preview,
    .service-preview,
    .works-preview,
    .news-preview,
    .contact-preview {
      padding: 4rem 1.5rem;
    }
  }
</style>
