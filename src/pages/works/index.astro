---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { client, type Work, type MicroCMSListResponse } from '../../lib/microcms';

let worksList: Work[] = [];
let fetchError = false;

try {
  const response = await client.get<MicroCMSListResponse<Work>>({
    endpoint: 'works',
    queries: { limit: 20 },
  });
  worksList = response.contents;
} catch (e) {
  fetchError = true;
}
---

<BaseLayout
  title="制作実績"
  description="Bearmin Studio | ベアミンスタジオがこれまでに手がけたWebサイト制作の実績一覧です。世界観を大切に設計した事例をご紹介します。"
>

  <Breadcrumb items={[{ label: '制作実績' }]} />

  <div class="page-header">
    <p class="eyebrow">Works</p>
    <h1 class="page-title">制作実績</h1>
    <p class="page-lead">世界観を大切にした、これまでのお仕事。</p>
  </div>

  <section class="works-section">
    <div class="works-wrap">
      {fetchError ? (
        <div class="works-empty">
          <p>制作事例を取得できませんでした。</p>
        </div>
      ) : worksList.length === 0 ? (
        <div class="works-empty">
          <p>現在、制作事例を準備中です。</p>
          <p class="works-empty-sub">公開でき次第、順次掲載していきます。</p>
        </div>
      ) : (
        <div class="works-grid">
          {worksList.map((work) => (
            <a href={work.url || '#'} class="work-item" target="_blank" rel="noopener noreferrer">
              {work.thumbnail ? (
                <>
                  <img src={work.thumbnail.url} alt={work.title} />
                  <div class="work-overlay">
                    <span class="work-overlay-title">{work.title}</span>
                    <span class="work-overlay-link">開く →</span>
                  </div>
                </>
              ) : (
                <span class="work-title-fallback">{work.title}</span>
              )}
            </a>
          ))}
        </div>
      )}
    </div>
  </section>

  <section class="cta-section">
    <p class="eyebrow">Contact</p>
    <h2 class="cta-heading">お気軽にお問い合わせください。</h2>
    <a href="/contact" class="cta-btn">相談してみる</a>
  </section>

</BaseLayout>

<style>
  .page-header {
    padding-top: 2.5rem;
  }

  @media (max-width: 768px) {
    .page-header {
      padding-top: 1.5rem;
    }
  }

  .eyebrow {
    font-family: var(--font-accent);
    font-size: 0.6875rem;
    letter-spacing: 0.22em;
    color: var(--moss-green);
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  /* Works */
  .works-section {
    background: var(--soft-white);
    padding: 5rem 2rem 7rem;
  }

  .works-wrap {
    max-width: 1000px;
    margin: 0 auto;
  }

  .works-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }

  .work-item {
    aspect-ratio: 4/3;
    background: var(--warm-greige);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    text-decoration: none;
    position: relative;
    transition: transform 0.35s ease, box-shadow 0.35s ease;
  }

  .work-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
  }

  .work-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .work-item:hover img {
    transform: scale(1.04);
  }

  .work-overlay {
    position: absolute;
    inset: 0;
    background: rgba(46, 46, 46, 0.62);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-end;
    gap: 0.25rem;
    padding: 1.5rem 1.75rem;
    opacity: 0;
    transition: opacity 0.3s ease;
    backdrop-filter: blur(3px);
  }

  .work-item:hover .work-overlay {
    opacity: 1;
  }

  .work-overlay-title {
    font-family: var(--font-accent);
    font-size: 0.9375rem;
    color: var(--soft-white);
    font-weight: 500;
    line-height: 1.5;
  }

  .work-overlay-link {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.55);
    letter-spacing: 0.04em;
  }

  .work-title-fallback {
    font-family: var(--font-accent);
    color: var(--bear-brown);
    font-size: 0.875rem;
  }

  .works-empty {
    text-align: center;
    padding: 5rem 0;
  }

  .works-empty p {
    font-size: 0.9375rem;
    opacity: 0.6;
    margin-bottom: 0.75rem;
  }

  .works-empty-sub {
    font-size: 0.8125rem;
    opacity: 0.45 !important;
  }

  /* CTA */
  .cta-section {
    background: var(--warm-greige);
    padding: 7rem 2rem;
    text-align: center;
  }

  .cta-heading {
    font-family: var(--font-accent);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 500;
    color: var(--bear-brown);
    line-height: 1.75;
    margin-bottom: 2.5rem;
  }

  .cta-btn {
    display: inline-block;
    background: var(--moss-green);
    color: var(--soft-white);
    padding: 1rem 3rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9375rem;
    transition: background 0.25s ease, transform 0.25s ease;
  }

  .cta-btn:hover {
    background: var(--bear-brown);
    transform: translateY(-2px);
  }

  @media (max-width: 900px) {
    .works-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .works-section,
    .cta-section {
      padding: 5rem 1.5rem;
    }

    .works-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
